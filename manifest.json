{
  "manifest_version": 2,
  "name": "My Firefox Extension",
  "version": "1.0",
  "description": "A Firefox extension with popup UI",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "My Extension"
  }
}
